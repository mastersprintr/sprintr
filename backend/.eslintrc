{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "createClass": "createClass",
            "pragma": "React",
            "version": "15.4.1"
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // Rules should follow the same order as in http://eslint.org/docs/rules/

        // Possible Errors
        "no-unexpected-multiline": 2,

        "no-console": 0, // TODO: Should allow error and warning!
        "comma-dangle": 0,

        // Best Practices
        "block-scoped-var": 2,
        "curly": [
            2,
            "all"
        ],
        "dot-location": [
            2,
            "property"
        ],
        "dot-notation": 2,
        "eqeqeq": [
            2,
            "allow-null"
        ],
        "no-caller": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-implicit-coercion": 2,
        "no-implied-eval": 2,
        "no-iterator": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal-escape": 2,
        "no-proto": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-useless-call": 2,
        "no-with": 2,
        "wrap-iife": [
            2,
            "inside"
        ],

        //Strict Mode
        "strict": [
            2,
            "global"
        ],

        //Variables
        "no-shadow-restricted-names": 2,
        "no-undef-init": 2,

        //Node.js and CommonJS
        "no-new-require": 2,
        "no-path-concat": 2,
        "no-sync": 2,

        //Stylistic Issues
        "array-bracket-spacing": [
            2,
            "never"
        ],
        "block-spacing": [
            2,
            "always"
        ],
        "comma-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ],
        "comma-style": [
            2,
            "last"
        ],
        "computed-property-spacing": [
            2,
            "never"
        ],
        "eol-last": 2,
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "key-spacing": [
            2,
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "new-cap": 2,
        "no-array-constructor": 2,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": 2,
        "object-curly-spacing": [
            2,
            "never"
        ],
        "operator-assignment": [
            2,
            "always"
        ],
        "quotes": [
            2,
            "double"
        ],
        "semi-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ],
        "semi": [
            2,
            "always"
        ],
        "keyword-spacing": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [
            2,
            "never"
        ],
        "space-in-parens": [
            2,
            "never"
        ],
        "space-infix-ops": [
            2,
            {
                "int32Hint": false
            }
        ],
        "space-unary-ops": 2
    },
    "env": {
        "node": true,
        "jasmine": true,
        "browser": true

    },
    "globals": {
        "angular": true,
        "inject": true
     },
    "extends": ["eslint:recommended", "plugin:react/recommended"]
}
